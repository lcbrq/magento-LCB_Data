<?xml version="1.0"?>
<config>
    <modules>
        <LCB_Data>
            <version>1.0.0</version>
        </LCB_Data>
    </modules>
    <global>
        <helpers>
            <lcb_data>
                <class>LCB_Data_Helper</class>
            </lcb_data>
        </helpers>
        <models>
            <lcb_data>
                <class>LCB_Data_Model</class>
            </lcb_data>
        </models>
        <resources>
            <lcb_data_setup>
                <setup>
                    <module>LCB_Data</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </lcb_data_setup>
            <lcb_data_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </lcb_data_write>
            <lcb_data_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </lcb_data_read>
        </resources>
    </global>
</config> 